<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotel.controller.launcherController"
            style="-fx-background-color: #FFFFFF;">
    <top>
        <HBox spacing="15" alignment="CENTER" style="-fx-background-color: #2E3A46; -fx-padding: 20;" BorderPane.alignment="CENTER">
            <Button text="Room View" fx:id="roomViewButton" onAction="#runRoom" style="-fx-background-color: #4E5A65; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20;"/>
            <Button text="Payment View" fx:id="paymentViewButton" onAction="#runPayment" style="-fx-background-color: #4E5A65; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20;"/>
            <Button text="Customer View" fx:id="customerViewButton" onAction="#runCustomer" style="-fx-background-color: #4E5A65; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20;"/>
            <Button text="Booking View" fx:id="bookingViewButton" onAction="#runBooking" style="-fx-background-color: #4E5A65; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20;"/>
        </HBox>
    </top>
    <center>
        <VBox fx:id="contentArea" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
            <!-- Content will be dynamically loaded here -->
        </VBox>
    </center>
</BorderPane>
