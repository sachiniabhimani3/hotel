<VBox fx:id="customerVBox" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="com.example.hotel.controller.customerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Customer Management"/>
    <ImageView fitHeight="191.0" fitWidth="466.0" pickOnBounds="true">
        <image>
            <Image url="@customer.jpg"/>
        </image>
    </ImageView>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
        <Label text="Customer ID (Delete/ Update/ Room Assignment or Return Key):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="customerIdField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Room Number (Room Assignment or Verify Reservation):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="roomField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Add Customer" onAction="#handleAddCustomerAction"/>
        <Button text="Update Customer" onAction="#handleUpdateCustomerAction"/>
        <Button text="Delete Customer" onAction="#handleDeleteCustomerAction"/>
        <Button text="Assign Room" onAction="#handleAssignRoomAction"/>

        <Button text="Return Room Key" onAction="#handleReturnRoomKeyAction"/>
        <Button text="Updated Customer List" onAction="#refreshCustomerList"/>
    </HBox>
    <ListView fx:id="customerListView" VBox.vgrow="ALWAYS" prefHeight="140.0" prefWidth="700.0" />
